<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TraCuuDieuLuat.Views.Homepage"
             Title="Trang chủ">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="logoapp.png" />
            <Label Text="Ứng dụng tra cứu điều luật"
                FontSize="18" FontAttributes="None"
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Ứng dụng sẽ hỗ trợ bạn trong việc tra cứu, tim kiếm nhanh các điều luật bạn cần " Padding="14, 30, 14 ,7"
                FontSize="15" FontAttributes="None"
                HorizontalOptions="CenterAndExpand"
                HorizontalTextAlignment="Center"
                 />
          
            <Button Clicked="Button_Clicked" Margin="90, 20, 90, 0" BackgroundColor="#1ead6e" Text="Tra cứu ngay"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>